tanımla baloncuk_sıralama(liste):
  n = uzunluk(liste)
  için i içinde aralık(n):
    için j içinde aralık(0, n-i-1):
     eğer liste[j] > liste[j+1]:
      liste[j], liste[j+1] = liste[j+1], liste[j]

liste = [3,9,7,8,5,6,1,2,4,0]
yaz(f"önce: {liste}")
baloncuk_sıralama(liste)
yaz(f"sonra: {liste}")

